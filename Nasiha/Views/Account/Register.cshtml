@using Nasiha.Resources

@model Nasiha.Models.RegisterViewModel
@{
    ViewBag.Title = ViewsKeys.Register;
}

<div class="register">
    <div class="container">
        <h2 class="text-center">@ViewsKeys.Register</h2>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    <i class="fa fa-user"></i>
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = ViewsKeys.Email })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control input-lg", placeholder = ViewsKeys.Nickname })
                        @Html.ValidationMessageFor(m => m.Nickname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control input-lg", placeholder = ViewsKeys.FullName })
                        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = ViewsKeys.Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" value="@ViewsKeys.Register" />
                        <p>
                            @Html.ActionLink(ViewsKeys.HaveAccount, "LogIn")
                        </p>
                        @Html.AntiForgeryToken()
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
