@using Nasiha.Resources

@model Nasiha.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = ViewsKeys.ForgotPassword;
}

<div class="ForgotPassword">
    <div class="container">
        <h2 class="text-center">@ViewsKeys.ForgotPassword</h2>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    <i class="fa fa-alert"></i>
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = ViewsKeys.Email })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="@ViewsKeys.Send" class="btn btn-primary btn-lg" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
