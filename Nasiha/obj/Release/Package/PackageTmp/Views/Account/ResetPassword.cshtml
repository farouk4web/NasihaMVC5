@using Nasiha.Resources

@model Nasiha.Models.ResetPasswordViewModel
@{
    ViewBag.Title = ViewsKeys.ResetPassword;
}

<div class="resetPassword">
    <div class="container">
        <h2 class="text-center">@ViewsKeys.ResetPassword</h2>

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <i class="fa fa-wrench"></i>
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = ViewsKeys.Email })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = ViewsKeys.Password })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", placeholder = ViewsKeys.ConfirmPassword })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(model => model.Code)
                        @Html.AntiForgeryToken()
                        <input type="submit" value="@ViewsKeys.Reset" class="btn btn-primary btn-lg" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
